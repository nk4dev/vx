{
  "name": "@nk4dev/vx",
  "version": "0.0.14",
  "type": "module",
  "description": "A CLI tool for Varius smart contracts",
  "main": "dist/index.js",
  "license": "MIT",
  "keywords": [
    "web3",
    "vx",
    "cli",
    "smart-contracts"
  ],
  "bin": {
    "vx3": "./dist/cli.js"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "repository": "https://github.com/nknighta/vx",
  "scripts": {
    "build": "rimraf dist && tsc",
    "clean": "rimraf dist",
    "dev": "node dist/cli.js",
    "vx": "npm run build  && node dist/cli.js",
    "start": "npm run build && npx vx serve --debug --logs",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "test:ci": "node --experimental-vm-modules node_modules/jest/bin/jest.js --ci --coverage --watchAll=false"
  },
  "dependencies": {
    "@types/node": "^22.15.15",
    "ethers": "^6.15.0",
    "prettier": "^3.5.3",
    "readline-sync": "^1.4.10",
    "solc": "^0.8.30"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@types/jest": "^30.0.0",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.2.0",
    "jest": "^30.0.5",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.33.1"
  }
}