{
  "name": "@nknighta/vx",
  "version": "0.0.14",
  "description": "A CLI tool for Varius smart contracts",
  "main": "dist/index.js",
  "license": "MIT",
  "keywords": [
    "web3",
    "vx",
    "cli",
    "smart-contracts"
  ],
  "bin": {
    "vx": "./dist/cli.js"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "repository": "https://github.com/nknighta/vx",
  "scripts": {
    "build": "rimraf dist && tsc",
    "clean": "rimraf dist",
    "dev": "node dist/cli.js",
    "start": "npm run build && npx vx serve --debug",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "dependencies": {
    "@types/node": "^22.15.15",
    "ethers": "^6.15.0",
    "prettier": "^3.5.3",
    "solc": "^0.8.30",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.2.0",
    "rimraf": "^6.0.1",
    "typescript-eslint": "^8.33.1"
  }
}
